<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/dialog"
        android:layout_width="330dp"
        android:layout_height="230dp">
        <TextView
            android:id="@+id/size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.05"
            android:textSize="20sp"
            android:text="Size"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/width"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:background="@drawable/edite"
            android:textColor="@color/white"
            android:padding="10dp"
            android:inputType="number"
            android:maxLength="5"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/size"
            app:layout_constraintVertical_bias="0.292"
            app:layout_constraintWidth_percent="0.3" />
        <ImageView
            android:id="@+id/icon"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintTop_toTopOf="@id/width"
            app:layout_constraintLeft_toRightOf="@id/width"
            app:layout_constraintBottom_toBottomOf="@id/width"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/height"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="18sp"
            android:maxLength="5"
            android:textStyle="normal"
            android:background="@drawable/edite"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@id/width"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/width"
            app:layout_constraintWidth_percent="0.3" />
        <LinearLayout
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@id/width"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/line2"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/line1"
            app:layout_constraintRight_toRightOf="@id/line1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:orientation="horizontal" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancle"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line2"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:text="Cancle"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:text="Ok"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/line2"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>